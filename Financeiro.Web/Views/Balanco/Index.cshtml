@model List<Financeiro.Common.Model.BalancoMensalModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "Balanco", FormMethod.Post))
{
    <div class="row">
        <h3>Balanço Diário</h3>
        <div>
            <input type="submit" name="Gerar" class="btn btn-default" value="Gerar" />
        </div>
    </div>
    <div class="row">
        <h3>Balanço mensal</h3>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Ano</th>
                    <th scope="col">Mês</th>
                    <th scope="col">Valor Crédito</th>
                    <th scope="col">Valor Débito</th>
                    <th scope="col">Valor Saldo</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var balanco in Model)
                {

                    <tr>
                        <td scope="row">@balanco.Ano</td>
                        <td scope="row">@balanco.Mes</td>
                        <td scope="row">@balanco.ValorCredito.ToString("N2")</td>
                        <td scope="row">@balanco.ValorDebito.ToString("N2")</td>
                        <td scope="row">@balanco.ValorSaldo.ToString("N2")</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

}